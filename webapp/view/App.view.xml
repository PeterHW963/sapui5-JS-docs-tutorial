<mvc:View
    controllerName="ui5.walkthrough.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
    <!-- we don't add Shell control to XML view if apps run in external shell, such as Fiori Launchpad that alr has a shell around the component UI -->
    <Shell>
        <App class="myAppDemoWT"> <!-- we add this class just to make sure the css selector that has .myAppDemoWT is only used by this app -->
            <pages>
                <Page title="{i18n>homePageTitle}">
                    <content>
                        <Panel 
                            headerText="{i18n>helloPanelTitle}"
                            class="sapUiResponsiveMargin"
                            width="auto">
                            <content>
                                <Button 
                                    text="{i18n>showHelloButtonText}" 
                                    press=".onShowHello"
                                    class="myCustomButton"/>
                                <Input 
                                    value="{/recipient/name}"
                                    valueLiveUpdate="true"
                                    width="70%"/>
                                <FormattedText
                                    htmlText="Hello {/recipient/name}"
                                    class="sapUiSmallMargin myCustomText sapThemeHighlight-asColor"/>
                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>